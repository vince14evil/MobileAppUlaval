<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context="barchallenges.ima.ulaval.ca.barchallenge.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir les prix"
        android:id="@+id/buttonPrize"
        android:longClickable="false"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Défi #1"
        android:id="@+id/buttonChallenge1"
        android:enabled="true"
        android:clickable="true"
        android:layout_below="@+id/buttonPrize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Défi #2"
        android:id="@+id/buttonChallenge2"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:enabled="true"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/buttonChallenge1"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Défi #3"
        android:id="@+id/buttonChallenge3"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:enabled="true"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/buttonChallenge2"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/toolbar"/>
</RelativeLayout>
